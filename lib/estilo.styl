vendor-prefixes ?= webkit moz official
@import 'nib'

//@import url(http://openfontlibrary.org/face/grupo3)
@import url(https://fonts.googleapis.com/css?family=Lato:400,700)

//Variables

*
  font-family 'Lato', 'Open Sans',"helvetica neue",sans-serif

p,h1,h1,h3,h4,h5,h6
  padding 0
  margin 0

a
  text-decoration none

body
  margin 0
  padding 0
  display flex
  flex-direction column
  align-items center
  background #e7e7e7

header
  width 100%
  height 70px
  background #f39c12
  display flex
  justify-content center

nav
  width 100%
  height 30px
  background #383838
  margin-bottom 10px
  display flex
  justify-content center
  box-shadow 0px 4px 11px -6px rgba(38,22,0,1)
.menu
  width 980px
  height 100%
  display flex
  align-items center
  ul
    margin 0
    padding 0 0 0 10px
  li
    display inline
    color white
    margin-right 10px
    transition ease 0.5s all
    &:hover
      color rgb(20, 205, 144)

.top
  width 980px
  display flex
  justify-content space-between
  align-items center
  &-logo
    display flex
    align-items center
  &-icons
    display flex
    align-items center
  img
    margin 0 10px
  h1
    color white

.button,[class*="button-"]
  display inline-block
  height 30px
  font 300 1em/30px 'Open Sans', sans-serif
  letter-spacing .08em
  padding 5px
  margin-left 10px
  background rgb(37, 157, 110)
  text-decoration none
  text-shadow 0 1px 3px rgba(0, 0, 0, 0.35)
  letter-spacing .08em
  color #fff
  border-radius 2px
  transition ease 0.35s all
  overflow hidden
  float left
  padding 0 10px 0 10px
  position relative

.button:hover,[class*="button-"]:hover
  background #078256
  box-shadow 0 0 3px rgba(0, 0, 0, 0.5) inset

.button-hover
  &:hover
    line-height 7.5em
  &:before
    content attr(data-texto)
    color #DEEFF5
    position absolute
    top -2.75em

main
  width 980px
  .receta
    box-sizing border-box
    h1
      padding 10px 0 0 0
      margin 0 0px 0 10px
      &:before
        content "\00a0\00a0\00a0\00a0\00a0\00a0"
        background url('./images/knife.png') no-repeat
        background-size 32px 32px
    >p
      padding 0
      margin 0 0 10px 54px
      color gray
    &-info
      width 980px
      height 200px
      background #aed5af
      color #538754
      font-family 'GRUPO3'
      font-size 6em
      display flex
      align-items center
      justify-content space-around
      padding 10px
      box-sizing border-box
      &-chef
        height 100px
        width 200px
        margin-top -40px
        p
          font-size 24px
          font-weight bold
          margin 0px 0 0 -20px
          width 200px
        &:before
          content "\00a0\00a0\00a0\00a0"
          background url('./images/chef-2.png') no-repeat
          background-size 76px 100px
          margin-left 30px
      &-tiempo
        width 200px
        margin-left -250px
        &:before
          content "\00a0\00a0\00a0\00a0\00a0\00a0"
          background url('./images/clock.png') no-repeat
          background-size 100px 100px
      &-cal
        width 200px
        margin-left -220px
        &:before
          content "\00a0\00a0\00a0\00a0"
          background url('./images/cal.png') no-repeat
          background-size 76px 100px
        &:after
          content "kcal"
          font-size 16px
    &-ingredientes
      ul
        margin 0
        padding 0
        counter-reset li
      li
        padding 10px 15px 10px 40px
        border-bottom 1px solid #ddd
        position relative
        &:before
          content counter(li)
          counter-increment li
          position absolute
          top 0
          left 0
          box-sizing border-box
          background #f2f2f2
          border-right 1px solid #ddd
          height 100%
          margin 0
          padding 10px
          font-size 11px
          color #999
          text-align center
        &:hover
          background rgba(221, 221, 221, 0.12)
    &-preparacion
      &-contenido
        padding 10px
        >img
          max-width 300px
          max-height 300px
          border-radius 3px
          float left
          margin 0 10px 0 0
        p
          display inline
.recomendaciones
  height 220px
  display flex
  flex-direction column
  &-sugerencias
    padding 0 10px
    display flex
    justify-content center
    align-items center
    height 100%

    ul
      width 100%
      display flex
      justify-content space-around
      align-items center
      margin 0
      padding 0
      li
        width 200px
        height 150px
        overflow hidden

      img
        border-radius 3px
        transition ease 0.1s all
        &:hover
          width 205px
          height 155px

.comentarios
  display flex
  flex-direction column
  justify-content center
  boz-sizing border-box
  &-nuevo
    padding 10px
    display flex
    flex-direction column
    border-bottom 1px solid #ddd
    margin-bottom 10px
    input[type="text"],input[type="email"]
      width 50%
      box-sizing border-box
      height 50px
      font-size 16px
      border 1px solid black
      margin 10px 0
    input[type="text"]
      margin-right 10px
  textarea
    outline none
    margin-bottom 10px
    font-size 16px
    border 1px solid black
  input[type="submit"]
    margin 0

  ul
    padding 0
    margin 10px
[data-comentarios="datos"]
  display flex
  justify-content space-between


.comentario
  box-sizing border-box
  align-self center
  background rgba(#d1cdcd, 0.3)
  margin-bottom 10px
  padding 10px
  display flex
  flex-direction column
  align-items flex-start
  font-family "PT Sans"
  color #555f77
  box-shadow 0 1px 3px 0 rgba(0,0,0,0.08)
  &-bottom
    color #acb4c2
    font-size 13px
    padding 5px 0px
    margin-top 5px
    border-top 1px solid #ddd
    display inline
    width 100%


footer
  width 100%
  height 40px
  background rgba(#e0ac37, 0.55)
  display flex
  align-self center
  justify-content center
  color white
  font-weight bold
  font-size 16px
  line-height 40px


.encabezado
  width 100%
  height 30px
  background rgba(218, 218, 218, 0.53)
  font-weight bold
  line-height 30px
  padding-left 10px
  display flex
  align-items center


.caja
  box-sizing border-box
  overflow hidden
  border 1px solid rgba(#a6a6a6, 0.52)
  background white
  margin-bottom 10px
  box-shadow 0 0 5px 2px rgba(0, 0, 0, .05)

.icono
  width 24px
  height 24px
  background-size 24px 24px
  &-ingredientes
    background url('./images/ingredientes.png') no-repeat
  &-cooking
    background url('./images/cooking.png') no-repeat
  &-chat
    background url('./images/chat.png') no-repeat
  &-suggest
    background url('./images/suggest.png') no-repeat
  &-usuario
    background url('./images/useric.png') no-repeat rgb(42, 196, 118)


ul
  list-style-type none

input
  outline none
  border none
  padding-left 5px
  &::-webkit-input-placeholder
    color #aaaaaa
    position relative
    padding 0
    transition padding-top .8s ease
  &:hover::-webkit-input-placeholder
    padding-top 3em

  &::-moz-placeholder
    color #aaaaaa
    position relative
    padding 0
    transition padding-top .8s ease
  &:hover::-moz-placeholder
    padding-top 3em

  &:-ms-input-placeholder
    color #aaaaaa
    position relative
    padding 0
    transition padding-top .8s ease
  &:hover:-ms-input-placeholder
    padding-top 3em


//Receta nueva

.nueva
  padding 10px
  display flex
  flex-direction column
  align-items center
  input
    box-shadow 1px 2px 5px rgba(0,0,0,.09)
    border-radius 2px 4px 4px 2px
    border 1px solid rgba(0, 0, 0, 0.07)
    height 10px
    padding 10px
    margin-right 10px
  &-titulo
    width 100%
    text-shadow 0 1px 0 rgba(255, 255, 255, 0.4)
    margin-top -10px
    padding-bottom 3px
    border-bottom 2px solid #15cc74
    &:before
      content "+"
      padding 5px 10px
      margin-left -10px
      background #15cc74
  &-nombre#newNombre
    width 900px
    font-size 16px
    margin 0
    height 30px
    border-radius 0 4px 4px 0
  &-tipo
    margin-top 10px
    width 100%
    display flex
    justify-content center
  &-tipo label.radio
    cursor pointer
    text-indent 35px
    overflow visible
    display inline-block
    position relative
    margin-bottom 15px
    &:before
      background #16ac68
      content ''
      position absolute
      top 2px
      left 0
      width 20px
      height 20px
      border-radius 100%
    &:after
      opacity 0
      content ''
      position absolute
      width 0.5em
      height 0.25em
      background transparent
      top 7.5px
      left 4.5px
      border 3px solid #ffffff
      border-top none
      border-right none
      transform rotate(-45deg)
  &-ingredientes
    width 958px
    margin-right 10px
    border-top 1px solid #ddd
    ul>li
      display flex
      justify-content space-between
      border-right 1px solid #ddd
      height 30px
      font-size 12px
      line-height 30px
      padding-top 2px
      padding-bottom 2px
      &:before
        background rgb(42, 196, 118)
        border 1px solid rgb(37, 177, 106)
        color black
        height 34px
        font-size 12px
        line-height 12px
  &-preparacion
    width 948px
    margin-top 10px
    &-titulo
      font-size 20px
      &:before
        content ''
        background rgb(42, 196, 118)
        width 50px
        height 50px
    textarea
      width 100%
      border 1px solid #ddd
  input[type="submit"]
    width 100%
    height 50px
input[type=radio]
  visibility hidden
input[type=radio]:checked + label:after
  opacity 1
label[for="newNombre"]
  width 50px
  height 50px
  background url('./images/nombreReceta.png') no-repeat rgb(42, 196, 118)
  background-position center
  background-size 32px 32px
  border 1px solid rgb(37, 177, 106)
  border-right none
label[data-tam="mediano"]
  width 30px
  height 30px
  border 1px solid rgb(37, 177, 106)
  border-right none
  background-position center
  background-size 24px 24px
.label
  &-newCorreo
    background url('./images/mailic.png') no-repeat rgb(42, 196, 118)
  &-newUser
    background url('./images/useric.png') no-repeat rgb(42, 196, 118)
  &-newDesc
    background url('./images/descic.png') no-repeat rgb(42, 196, 118)
  &-newIngred
    background rgb(42, 196, 118)
    border 1px solid rgb(37, 177, 106)
    border-right none
    width 40px
    height 40px
    text-align center
    line-height 40px
    font-size 22px
    font-weight bold
.newDescripcion
  width 400px
input[type="text"].newIngrediente
  width 200px
  height 20px
.tag
  padding 1px
  border-radius 3px
  cursor pointer
  font-size 11px
  line-height 15px
  height 15px
  align-self center
.delete
  background rgb(224, 119, 132)
  border 1px solid rgb(168, 16, 35)
  color rgb(166, 0, 0)
.row
  display flex
  flex-direction row
  align-items center
  width 100%
  margin-top 10px

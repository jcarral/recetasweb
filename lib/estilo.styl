vendor-prefixes ?= webkit moz official
@import 'nib'

@import url(http://openfontlibrary.org/face/grupo3)
@import url(https://fonts.googleapis.com/css?family=Lato:400,700)

//Variables

*
  font-family 'Lato', 'Open Sans',"helvetica neue",sans-serif

body
  margin 0
  padding 0
  display flex
  flex-direction column
  align-items center
  background #e7e7e7

header
  width 100%
  height 70px
  background #f39c12
  display flex
  justify-content center

nav
  width 100%
  height 30px
  background #383838
  margin-bottom 10px
  display flex
  justify-content center
  box-shadow 0px 4px 11px -6px rgba(38,22,0,1)
.menu
  width 980px
  height 100%
  display flex
  align-items center
  ul
    margin 0
    padding 0
  li
    display inline
    color white
    &:hover
      color rgb(20, 205, 144)

.top
  width 980px
  display flex
  justify-content space-between
  align-items center
  &-logo
    display flex
    align-items center
  &-icons
    display flex
    align-items center
  img
    margin 0 10px
  h1
    color white

main
  width 980px
  height 2000px
  .receta
    h1
      padding 10px 0 0 0
      margin 0 0 0 10px
    >p
      padding 0
      margin 0 0 0 30px
      color gray
    &-info
      width 980px
      height 200px
      background #aed5af
      color #538754
      font-family 'GRUPO3'
      font-size 6em
      display flex
      align-items center
      justify-content space-around
      padding 10px
      box-sizing border-box
      &-cal
        &:after
          content "kcal"
    &-preparacion
      &-contenido
        padding 10px
        >img
          max-width 300px
          max-height 300px
          border-radius 3px
          float left
          margin 0 10px 0 0
        p
          display inline
.recomendaciones
  height 300px
  display flex
  &-sugerencias
    display flex
    justify-content space-between
    align-items center
.encabezado
  width 100%
  height 30px
  background rgba(218, 218, 218, 0.53)
  font-weight bold
  line-height 30px
  padding-left 10px

.caja
  box-sizing border-box
  overflow hidden
  border 1px solid rgba(#a6a6a6, 0.52)
  background white
  margin-bottom 10px

ul
  list-style-type none

input
    border none
    padding-left 5px

  &::-webkit-input-placeholder
    color #aaaaaa
    position relative
    padding 0
    transition padding-top .8s ease
  &:hover::-webkit-input-placeholder
    padding-top 3em

  &::-moz-placeholder
    color #aaaaaa
    position relative
    padding 0
    transition padding-top .8s ease
  &:hover::-moz-placeholder
    padding-top 3em

  &:-ms-input-placeholder
    color #aaaaaa
    position relative
    padding 0
    transition padding-top .8s ease
  &:hover:-ms-input-placeholder
    padding-top 3em
